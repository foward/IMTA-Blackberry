<h1>Ordenes de Trabajo</h1>


<br/>
<div id="nav">
  <%= link_to 'Generar Orden', :controller => 'peticions',:action => 'index' %>
</div>
<br/>

<table id="listas">
  <tr>
    <th>Tipo orden</th>
    <th>Numero orden</th>
    <th>Fecha apertura</th>
    <th>Estado</th>
    <th>Máquina</th>
    <th>Técnico Asignado</th>
    <th colspan="3">Acciones</th>
  </tr>

  <% @ordens.each do |orden| %>
    <tr>
      <td><%=image_tag("icon_mantencion.png", :class => "nodecoration") %>&nbsp;<%=h tipo_orden(orden.tipo_orden) %></td>
      <td><%=h orden.numero_orden %></td>
      <td><%=h format_date(orden.fecha_apertura) %></td>
      <td><%=h estado_orden(orden.estado) %>   </td>
      <td><%= link_to  maquina(orden.maquina_id), :id => orden.maquina_id, :controller => 'maquinas', :action => 'show' %></td>
      <td><%=image_tag("icon_user.png", :class => "nodecoration") %>&nbsp;<%=h usuario(orden.usuario_id) %></td>
      <td><%= link_to image_tag("icon_show.png", :class => "nodecoration"), :action => 'show', :id => orden %></td>
      <td><%= link_to image_tag("icon_edit.png", :class => "nodecoration"), :action => 'edit', :id => orden %></td>
      <td>
        <%= link_to image_tag("icon_delete.png", :class => "nodecoration"), {:controller => 'ordens' , :action => 'destroy', :id => orden} , :confirm => 'Desea eliminar esta orden? \n IMPORTANTE: No hay vuelta atras!', :post => true %>
      </td>
    </tr>
  <% end %>
</table>

<br />
